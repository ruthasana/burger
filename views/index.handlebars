<h1>Eat-Da-Burger!</h1>

<h2>Available Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devour}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="available" value="true">
          <button type="submit">Devour It!</button>
        </form>

        {{> burgers/delete-burger}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devour}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="available" value="false">
          <button type="submit">Devoured!</button>
        </form>

        {{> burgers/delete-burger}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="avai">Available?</label><br>
    <input type="radio" name="available" value="1" checked> Available!<br>
    <input type="radio" name="available" value="0"> Available
  </div>

  <button type="submit">Add burger</button>
</form>
